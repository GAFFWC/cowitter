{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@cowitter/decorators": [
        "libs/decorators/src"
      ],
      "@cowitter/decorators/*": [
        "libs/decorators/src/*"
      ],
      "@cowitter/models": [
        "libs/models/src"
      ],
      "@cowitter/models/*": [
        "libs/models/src/*"
      ]
    }
  }
}